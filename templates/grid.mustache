{{!
    @template format_grid/grid

    Displays the grid.

    Example context (json):
    {
    }
}}
<div class="thegrid d-flex flex-wrap justify-content-between">
    {{#gridsections}}
    {{#sectionbreak}}
    </div>
    {{#sectionbreakheading}}
    <h2>{{sectionbreakheading}}</h2>
    {{/sectionbreakheading}}
    <div class="thegrid d-flex flex-wrap justify-content-between">
    {{/sectionbreak}}
    <div class="card m-2">
        <a href="{{sectionurl}}">
            <div class="card-header">{{sectionname}}</div>
            <div class="grid-image card-img-bottom text-center">
                <img class="h-100 img-responsive" src="{{imageuri}}" alt="{{alttext}}">
            </div>
        </a>
    </div>
    {{/gridsections}}
</div>
